server {
    listen 4200;  # Listen on port 80 for HTTP connections.
    server_name localhost;  # The domain name.

    # Root directory and index files.
    root /usr/share/nginx/html;
    index index.html index.htm;

    # Location blocks handle requests for different resources.
    location / {
        try_files $uri $uri/ =404;  # Serve static files or return a 404 error.
    }

    location /api/ {
        proxy_pass http://localhost:5001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # Error handling
    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/html;
    }
}